  <div class="row-fluid">
    <h3>Listing initiatives</h3>
    <div class="span12">
      <div class="span11">
        <table class="table table-hover">
          <thead class="unstyled inline">
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Type</th>
              <th>Status</th>
              <th>Year</th>
              <th>Contributions</th>
              <th>Expenditures</th>
            </tr>
          </thead>
        <% @initiatives.each do |initiative| %>
          <tbody class="unstyled inline">
            <tr>
              <td><%= link_to initiative.name, initiative, :class=>'btn btn-link' %></td>
              <td><%= initiative.description %></td>
              <td><%= initiative.initiativetype %></td>
              <td><%= initiative.status %></td>
              <td><%= initiative.year %></td>
              <td><%= number_to_currency initiative.contributions %></td>
              <td><%= number_to_currency initiative.expenditures %></td>
              <td><%= link_to 'Edit', edit_initiative_path(initiative), :class=>'btn' %></td>
              <td><%= link_to 'Delete', initiative, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <span class="btn btn-primary"><%= link_to 'New Initiative', new_initiative_path %></span>
  </div>
