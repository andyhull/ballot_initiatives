<h1>Listing initiatives</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th>Status</th>
    <th>Year</th>
    <th>Contributions</th>
    <th>Expenditures</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @initiatives.each do |initiative| %>
  <tr>
    <td><%= initiative.name %></td>
    <td><%= initiative.description %></td>
    <td><%= initiative.type %></td>
    <td><%= initiative.status %></td>
    <td><%= initiative.year %></td>
    <td><%= initiative.contributions %></td>
    <td><%= initiative.expenditures %></td>
    <td><%= link_to 'Show', initiative %></td>
    <td><%= link_to 'Edit', edit_initiative_path(initiative) %></td>
    <td><%= link_to 'Destroy', initiative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

